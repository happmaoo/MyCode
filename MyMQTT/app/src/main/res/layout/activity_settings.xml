<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/editText_mqqt_server_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="服务器获取网址"
        android:padding="2dp"
/>

    <EditText
        android:id="@+id/editText_mqqt_server_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="端口"
        android:padding="2dp"
/>
    <EditText
        android:id="@+id/editText_mqqt_server_keepalive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="keepalive"
        android:padding="2dp"
        />

    <EditText
        android:id="@+id/editText_mqqt_server_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="用户名"
        android:padding="2dp"
/>


    <EditText
        android:id="@+id/editText_mqqt_server_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="密码"
        android:padding="2dp"
/>

    <EditText
        android:id="@+id/editText_mqqt_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Topic"
        android:padding="2dp"
/>


    <EditText
        android:id="@+id/editText_FontSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="FontSize"
        android:padding="2dp"
/>

    <Button
        android:id="@+id/button_clearhistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="clear history" />


</LinearLayout>
